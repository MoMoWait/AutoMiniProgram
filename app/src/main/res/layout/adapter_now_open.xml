<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <ImageView
        android:id="@+id/img_lotty"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/text_lotty_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="@string/app_name"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/text_lotty_no"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/text_lotty_title"
        android:layout_alignBottom="@+id/img_lotty"
        android:paddingLeft="10dp"
        android:text="@string/app_name"
        android:textColor="#8f000000"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/text_lotty_date"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingRight="10dp"
        android:layout_alignParentRight="true"
        android:text="@string/app_name"
        android:textColor="#8f000000"
        android:textSize="14sp"/>

    <LinearLayout
        android:id="@+id/layout_lotty_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/text_lotty_no"
        android:layout_toRightOf="@+id/img_lotty"/>

    <TextView
        android:id="@+id/text_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="@string/more"
        android:textColor="#8f000000"
        android:textSize="16sp"
        android:scaleY="2"/>

</RelativeLayout>