            android:label="@string/message_center"
            android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.edu.fjnu.autominiprogram.activity.BrowserActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.edu.fjnu.autominiprogram.activity.RegisterActivity"
            android:label="@string/user_register"
            android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.edu.fjnu.autominiprogram.activity.ChartActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.edu.fjnu.autominiprogram.activity.ToolActivity"
            android:screenOrientation="portrait"
            android:label="">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.edu.fjnu.autominiprogram.activity.LotteryDisplayActivity"
            android:screenOrientation="portrait"
            android:label="">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="cn.edu.fjnu.autominiprogram.activity.FcTrendsInfoActivity"
            android:screenOrientation="portrait"
            android:label="@string/trend_chart">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="cn.edu.fjnu.autominiprogram.activity.FcTrendChartActivity"
            android:screenOrientation="landscape"
            android:label="">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
