        </activity>

        <activity
            android:name="cn.edu.fjnu.autominiprogram.activity.FCTrendsTypeActivity"
            android:screenOrientation="portrait"
            android:label="@string/trend_any">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="cn.edu.fjnu.autominiprogram.activity.ForecastInfoActivity"
            android:screenOrientation="portrait"
